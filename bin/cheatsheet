#!/bin/bash

source bash-colours.sh
clear

echo -e "${BWHITE}Cheatsheet for quickly viewing commands.${RESET}"
echo ""
echo ""

echo -e "${BWHITE}Git aliases:${RESET}"
echo ""

git config --get-regex alias | awk -F='\n' '{print substr($1, 7)}' | sed "s/ /\\`printf '\n%10s'`/"

echo ""
echo -e "${BWHITE}Commands: $RESET"

find ~/.dotfiles/bin -maxdepth 1 -type f -printf "%f\n"
for d in ~/.dotfiles/bin/*/; do
  echo ""
  echo -e "${BWHITE}${d}:${RESET}"
  find $d -maxdepth 1 -type f -printf "%f\n"
done

