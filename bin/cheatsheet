#!/bin/bash
clear

echo "Cheatsheet for quickly viewing commands."
echo ""
echo ""

echo "Git aliases:"
echo ""

git config --get-regex alias | awk -F='\n' '{print substr($1, 7)}' | sed "s/ /\\`printf '\n%10s'`/"

echo "Commands:"


find ~/.dotfiles/bin -maxdepth 1 -type f -printf "%f\n"
for d in ~/.dotfiles/bin/*/; do
  echo ""
  echo $d":"
  find $d -maxdepth 1 -type f -printf "%f\n"
done

